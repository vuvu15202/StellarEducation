    </div>
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-6 d-flex align-items-center">
                        <h6 class="mb-0">Thêm/Sửa Bài giảng</h6>
                    </div>
                    <div class="col-6 text-end">
                        <!-- <button class="btn btn-outline-primary btn-sm mb-0">View All</button> -->
                        @* <input name="inputSearchProject" id="inputSearchProject" class="form-control" placeholder="Project title"> *@
                    </div>
                </div>
            </div>
            <div class="card-body p-3 pb-0" style="overflow-y: scroll; height: 30vh">
                <div id="lessonForm">
                    <div class="form-group">
                        <label for="lessonId">Lesson ID</label>
                        <input type="number" class="form-control" id="lessonId" placeholder="Enter Lesson ID" value="0" disabled>
                    </div>
                    <div class="form-group">
                        <label for="lessonNum">Lesson Number</label>
                        <input type="number" class="form-control" id="lessonNum" placeholder="Enter Lesson Number" value="1">
                    </div>
                    <div class="form-group">
                        <label for="previousLessioNum">Previous Lesson Number(Bài giảng điều kiện)</label>
                        <input type="number" class="form-control" id="previousLessioNum" value="0" min="0">
                    </div>
                    @* <div class="form-group">
                        <label for="courseId">Course ID</label>
                        <input type="number" class="form-control" id="courseId" placeholder="Enter Course ID" value="6">
                    </div> *@
                    <div class="form-group">
                        <label for="courseId">Course</label>
                        <select class="form-control" id="courseIdCreate" required>
                            <option value="">Select Course</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Lesson Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter Lesson Name">
                    </div>
                    <div class="form-group">
                        <label for="videoUrl">Video URL</label>
                        <input type="text" class="form-control" id="videoUrl" placeholder="Enter Video URL">
                    </div>
                    <div class="form-group">
                        <label for="videoUrl">Video Time (minutes)</label>
                        <input type="number" class="form-control" id="videoTime" placeholder="Enter Video Time (minutes)" value="120">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3" placeholder="Enter DescriptionL"></textarea>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="isDelete">
                        <label class="form-check-label" for="isPrivate">Is Delete</label>
                    </div>
                    <div class="form-group">
                        <label for="quiz">Quiz Code(Exam Code)</label>
                        <input type="text" class="form-control" id="quiz">
                    </div>
                    <button type="button" class="btn btn-primary" id="createLesson">Submit</button>
                    <button type="button" class="btn btn-info" id="clearLesson">Clear</button>
                </div>
            </div>
        </div>
    </div>
</div>
