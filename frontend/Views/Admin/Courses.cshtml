                    <div class="col-6 d-flex align-items-center">
                        <h6 class="mb-0">Tìm Khóa học</h6>
                    </div>
                    <div class="col-6 text-end">
                        <!-- <button class="btn btn-outline-primary btn-sm mb-0">View All</button> -->
                        <input name="searchCourse" id="searchCourse" class="form-control" placeholder="Course title">
                    </div>
                </div>
            </div>
            <div class="card-body p-3 pb-0" style="overflow-y: scroll; height: 30vh">
                <table class="table table-striped align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Image</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">IsDelete</th>
                            <th class="text-secondary opacity-7"></th>
                        </tr>
                    </thead>
                    <tbody id="courses">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-6 d-flex align-items-center">
                        <h6 class="mb-0">Thêm/Sửa Khóa Học</h6>
                    </div>
                    <div class="col-6 text-end">
                        <!-- <button class="btn btn-outline-primary btn-sm mb-0">View All</button> -->
                        @* <input name="inputSearchProject" id="inputSearchProject" class="form-control" placeholder="Project title"> *@
                    </div>
                </div>
            </div>
            <div class="card-body p-3 pb-0" style="overflow-y: scroll; height: 30vh">
                <div>
                    <div class="form-group">
                        <label for="courseId">Course ID</label>
                        <input type="number" class="form-control" id="courseId" placeholder="Enter Course ID" value="0" disabled>
                    </div>
                    <div class="form-group">
                        <label for="categoryId">Category </label>
                        <select class="form-control" id="categoryId">
                            <option value="">Select Category</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter Course Name">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control" id="image">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3" placeholder="Enter Course Description"></textarea>
                    </div>
                    <div class="form-group form-check row d-flex">
                        <div class="col-md-5 visually-hidden">
                            <span>
                                <input type="checkbox" class="form-check-input" id="isPrivate" checked>
                                <label class="form-check-label" for="isPrivate">Is Private</label>
                            </span>
                        </div>
                        <div class="col-md-5">
                            <span>
                                <input type="checkbox" class="form-check-input" id="isDelete">
                                <label class="form-check-label" for="isDelete">Is Delete</label>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lecturerId">Lecture</label>
                        <select class="form-control" id="lecturerId">
                            <option value="">Choose Lecture</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" placeholder="Enter Course Price" value="0">
                    </div>
                    <div id="createCourse" type="button" class="btn btn-primary">Submit</div>
                    <button type="button" class="btn btn-info" id="clearCourse">Clear</button>
                </div>
            </div>
        </div>
    </div>
</div>
