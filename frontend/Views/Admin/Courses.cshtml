            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Danh sách thí sinh</h1>
                <div type="button" data-bs-dismiss="modal" aria-label="Close"><i class="fas fa-window-close fa-lg text-danger"></i></div>
            </div>
            <div class="modal-body" style=" overflow-y: scroll;">
                <table class="table table-striped align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Enroll Date</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Lesson Current</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Course Status</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Average Grade</th>
                            <th class="text-secondary opacity-7"></th>
                        </tr>
                    </thead>
                    <tbody id="students">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer d-flex">
                <div class="col-md-12">
                    <input class="btn" type="file" name="file-candidates" id="file-candidates" accept=".xls, .xlsx" />
                    <button type="button" class="btn btn-primary" id="submit-file-candidates">Thêm thí sinh</button>
                    <button class="btn btn-link text-danger text-sm mb-0 px-0 ms-4" data-id="${value.questionBankId}">
                        <a id="exportLink" href="http://localhost:5000/api/QuestionBanks/template/download/candidates" download="Template_Candidates_List.xlsx">
