    ::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

    ::-webkit-scrollbar-corner {
        background: #f1f1f1;
    }

    /* Đoạn nội dung có thanh cuộn */
    .scrollable-content {
        height: 300px;
        overflow-y: scroll;
        padding: 10px;
        background: #e2e2e2;
    }

    /* Firefox */
    .scrollable-content {
