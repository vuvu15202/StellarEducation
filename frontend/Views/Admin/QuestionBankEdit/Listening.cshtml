<div class="p-3 border border-secondary-subtle border- rounded-1 bg-secondary bg-opacity-25 position-absolute bottom-0 start-0 " style="width:100vw;">
    <div class="d-flex justify-content-end">
        <div class="mx-2 w-100">
            <div class="row justify-content-end">
                <div class="col-1">
                    <button id="btn-start" class="btn btn-warning">Start</button>
                </div>
                <div class="col-1">
                    <span id="currentTime">00:00</span> / <span id="duration">00:00</span>
                </div>
                <div class="col-10">
                    <progress id="progressBar" value="0" max="100"></progress>
                </div>
            </div>
            @* <label class="">Âm lượng: <input id="volumeSlider" type="range" min="0" max="1" step="0.1" value="1"></label> *@
        </div>
        <div class="mx-2">
            <button class="btn volume-container">
                <div class="volume-container">
                    <i class="fas fa-volume-up volume-icon"></i>
                    <input type="range"
                           class="volume-slider"
                           id="volumeSlider"
                           min="0"
                           max="1"
                           step="0.1"
                           value="0.5" />
                </div>
            </button>
        </div>
        <div class="mx-2"><button id="btnSubmit" class="btn btn-success">Submit</button></div>
        @* <div class="mx-2"><button id="btnExit" class="btn btn-danger">Exit</button></div> *@
    </div>
